@model StaffModel

@{
    ViewData["Title"] = "Profile";
}

<h2 class="text-center">Staff Profile</h2>

<div class="card">
    <div class="card-body">
        <p><strong>ID:</strong> @Model.StaffId</p>
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Phone:</strong> @Model.PhoneNumber</p>
        <p><strong>Role:</strong> @Model.Role</p>
        <p><strong>Salary:</strong> @Model.Salary</p>
    </div>
</div>
