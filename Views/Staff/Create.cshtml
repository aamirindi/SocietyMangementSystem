@model StaffScheduleModel
@{
    ViewBag.Title = "Add/Edit Schedule";
}

<h2>@ViewBag.Title</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Create" method="post">
    @if (Model.ScheduleId != 0)
    {
        <input type="hidden" asp-for="ScheduleId" />
    }

    <div class="form-group">
        <label>Staff</label>
        <select asp-for="UserId" asp-items="ViewBag.Users" class="form-control"></select>
        @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Day of Week</label>
        <input asp-for="DayOfWeek" class="form-control" />
        @Html.ValidationMessageFor(model => model.DayOfWeek, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Shift Start</label>
        <input asp-for="ShiftStart" type="time" class="form-control" />
        @Html.ValidationMessageFor(model => model.ShiftStart, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Shift End</label>
        <input asp-for="ShiftEnd" type="time" class="form-control" />
        @Html.ValidationMessageFor(model => model.ShiftEnd, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Task</label>
        <input asp-for="Task" class="form-control" />
        @Html.ValidationMessageFor(model => model.Task, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
