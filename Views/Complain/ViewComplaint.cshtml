            </button>
        </div> *@

        <div class="table-responsive">
            <table class="table table-hover align-middle text-center" id="test">
                <thead class="table-dark">
                    <tr>
                        <th>Complaint ID</th>
                        <th>UserId</th>
                        <th>Category</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Admin Response</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr class="bg-white shadow-sm">
                            <td>@c.ComplaintId</td>
                            <td>@c.UserId</td>
                            <td>@c.Category</td>
                            <td>@c.Description</td>
                            <td>
                                <span class="badge bg-primary px-3 py-2">@c.Status</span>
                            </td>
                            <td>@c.AdminResponse</td>
                            <td>
                                @* <a class="btn btn-sm btn-success shadow-sm" asp-controller="Auth" asp-action="ViewUser"
                                   asp-route-id="@c.ComplaintId">
                                    <i class="ti ti-eye"></i>
                                </a> *@
                                <a class="btn btn-sm btn-warning shadow-sm" asp-controller="Complain" asp-action="EditComplain"
                                   asp-route-id="@c.ComplaintId">
                                    <i class="ti ti-pencil"></i>
                                </a>
                                <a class="btn btn-sm btn-danger shadow-sm" asp-controller="Complain" asp-action="DeleteComplain"
                                   asp-route-id="@c.ComplaintId" onclick="return confirm('Are You Sure?')">
                                    <i class="ti ti-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




