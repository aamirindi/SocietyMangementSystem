@model List<ComplainModel>


<div class="container mt-5 d-flex justify-content-center">
    <div>
        <h3 class="text-center mb-4 fw-bold text-secondary">Complaint List</h3>
@* 
        <div class="d-flex justify-content-end mb-3">
            <button id="exportExcel" class="btn btn-success shadow-sm me-2 fw-semibold">
                <i class="fi fi-rr-file-excel me-1"></i> Export to Excel
            </button>
