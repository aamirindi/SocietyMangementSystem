@model ComplainModel



<form method="post">
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Register a Complaint</h1>
            <div class="p-4 border rounded bg-light shadow">
                <div class="mb-3">
                     <label class="form-label">Category</label>
                        <select asp-for="Category" class="form-control" required>
                            <option value="Maintenance">Maintenance</option>
                            <option value="Security">Security</option>
                            <option value="Other">Other</option>
                        </select>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea asp-for="Description" class="form-control" required></textarea>
                    </div>
                    <input type="hidden" asp-for="UserId" value="@User.Identity.Name" />
                    <button type="submit" class="btn btn-primary">Submit Complaint</button>
                </div>               
            </div>
        </div>
    </div>
</div>
</form>






















